# Lab Website Environment Configuration
# Copy this file to .env and modify the values as needed

# Database Configuration
MYSQL_ROOT_PASSWORD=LabWeb2024Root!@#SecurePass
MYSQL_DATABASE=lab_web
MYSQL_USER=lab_web_user
MYSQL_PASSWORD=LabWeb2024User$%^SecurePass

# Flask Configuration
SECRET_KEY=LabWebSecretKey2024!@#$%^&*()_+SecureForProduction
JWT_SECRET_KEY=LabWebJWTKey2024!@#$%^&*()_+AuthenticationSecure
FLASK_CONFIG=production

# Application Configuration
UPLOAD_FOLDER=/app/media
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# Port Configuration
FRONTEND_PORT=3000
BACKEND_PORT=8000
MYSQL_PORT=3307
PHPMYADMIN_PORT=8081
MYSQL_HOST=db

# Development Configuration (for docker-compose.dev.yml)
FLASK_DEBUG=0
NODE_ENV=production
CHOKIDAR_USEPOLLING=true

# Development Container Restart Policy
# Options: no, always, unless-stopped, on-failure
# - no: Do not restart containers automatically (default for dev)
# - unless-stopped: Restart containers unless they are explicitly stopped (recommended for persistent dev)
# - always: Always restart containers
# - on-failure: Restart only on failure
DEV_RESTART_POLICY=no

# Additional configuration for deployment scripts
DATABASE_URL=mysql+pymysql://${MYSQL_USER}:${MYSQL_PASSWORD}@${MYSQL_HOST}:3306/${MYSQL_DATABASE}?charset=utf8mb4