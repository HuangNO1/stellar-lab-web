# Lab Website Environment Configuration
# Copy this file to .env and modify the values as needed

# Database Configuration
MYSQL_ROOT_PASSWORD=lab_web_root_123
MYSQL_DATABASE=lab_web
MYSQL_USER=lab_web_user
MYSQL_PASSWORD=lab_web_pass_123

# Flask Configuration
SECRET_KEY=change_this_secret_key_in_production
JWT_SECRET_KEY=change_this_jwt_secret_in_production
FLASK_CONFIG=production

# Application Configuration
UPLOAD_FOLDER=/app/media
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# Port Configuration
FRONTEND_PORT=3000
BACKEND_PORT=8000
MYSQL_PORT=3307
PHPMYADMIN_PORT=8081

# Development Configuration (for docker-compose.dev.yml)
FLASK_DEBUG=0
NODE_ENV=production
CHOKIDAR_USEPOLLING=true