# Simplified Dockerfile for testing nginx configuration
# This bypasses the TypeScript build issues for deployment testing
FROM nginx:stable-alpine

# Copy nginx configuration
COPY docker/nginx.conf /etc/nginx/nginx.conf

# Create a simple test page instead of copying dist
RUN echo '<!DOCTYPE html><html><head><title>Lab Website Test</title></head><body><h1>Lab Website Framework</h1><p>Docker deployment test successful!</p></body></html>' > /usr/share/nginx/html/index.html

# Create nginx cache directories with proper permissions
RUN mkdir -p /var/cache/nginx/client_temp \
    /var/cache/nginx/proxy_temp \
    /var/cache/nginx/fastcgi_temp \
    /var/cache/nginx/uwsgi_temp \
    /var/cache/nginx/scgi_temp \
    && chown -R nginx:nginx /var/cache/nginx \
    && chmod -R 755 /var/cache/nginx

# Don't switch to nginx user - run as root for proper permissions

# Expose port
EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --quiet --tries=1 --spider http://localhost/ || exit 1

# Start nginx
CMD ["nginx", "-g", "daemon off;"]