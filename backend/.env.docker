# Docker 环境配置文件

# 数据库配置 - 使用专用用户 lab_web_user
DATABASE_URL=mysql+pymysql://lab_web_user:LabWeb2024User$%^SecurePass@db:3306/lab_web?charset=utf8mb4
MYSQL_HOST=db
MYSQL_PORT=3306
MYSQL_USER=lab_web_user
MYSQL_PASSWORD=LabWeb2024User$%^SecurePass
MYSQL_ROOT_PASSWORD=LabWeb2024Root!@#SecurePass
MYSQL_DATABASE=lab_web

# Flask 配置
FLASK_APP=run.py
FLASK_CONFIG=production
SECRET_KEY=lab_web_secret_key_change_in_production_2024
JWT_SECRET_KEY=lab_web_jwt_secret_change_in_production_2024

# 文件上传配置
UPLOAD_FOLDER=/app/media

# CORS 配置
CORS_ORIGINS=*

# 其他配置
MAX_CONTENT_LENGTH=52428800