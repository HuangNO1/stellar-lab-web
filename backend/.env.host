# 环境配置文件 - 使用宿主机数据库

# 数据库配置 - 连接到宿主机MariaDB
DATABASE_URL=mysql+pymysql://lab_web_user:LabWeb2024User$%^SecurePass@host.docker.internal:3306/lab_web?charset=utf8mb4
MYSQL_HOST=host.docker.internal
MYSQL_PORT=3306
MYSQL_USER=lab_web_user
MYSQL_PASSWORD=LabWeb2024User$%^SecurePass
MYSQL_ROOT_PASSWORD=LabWeb2024Root!@#SecurePass
MYSQL_DATABASE=lab_web

# Flask 配置
FLASK_APP=run.py
FLASK_CONFIG=production
SECRET_KEY=lab_web_secret_key_change_in_production_2024
JWT_SECRET_KEY=lab_web_jwt_secret_change_in_production_2024

# 文件上传配置
UPLOAD_FOLDER=/app/media

# CORS 配置
CORS_ORIGINS=*

# 其他配置
MAX_CONTENT_LENGTH=52428800

# 開發環境重啟策略配置
# Options: no, always, unless-stopped, on-failure
DEV_RESTART_POLICY=no