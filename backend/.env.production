# Flask 環境配置
FLASK_CONFIG=production

# 安全配置 (生產環境使用強密鑰)
SECRET_KEY=your-production-secret-key-here
JWT_SECRET_KEY=your-production-jwt-secret-key-here

# 數據庫配置 (生產環境數據庫)
DATABASE_URL=mysql+pymysql://username:password@production-host/lab_web?charset=utf8mb4

# 文件上傳配置
UPLOAD_FOLDER=/var/www/lab_web/media

# 服務器配置
PORT=8000